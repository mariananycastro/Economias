<%= form_for @movement do |f| %>
  <%= f.label :name, t('.name') %>
  <%= f.text_field :name %>
  <%= f.label :value, t('.value') %>
  <%= f.number_field :value %>
  <%= f.label :date, t('.date') %>
  <%= f.date_field :date %>
  <%= f.label :transaction_type, t('.type') %>
  <%= f.select :transaction_type, options_for_select(Transaction.transaction_types) %>
  <%= f.label :category_id, t('.category') %>
  <%= f.collection_select :category_id, @categories, :id,:name, { prompt: t('.select_category') }%>
  <%= f.label :account_id, t('.account') %>
  <%= f.collection_select :account_id, @accounts, :id,:name, { prompt: t('.select_account') }%>
  <%= f.submit t('.save') %>
<% end %>
