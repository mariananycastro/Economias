<%= form_with model:@category, local: true do |f| %>
  <%= f.label :name, t('.name') %>
  <%= f.text_field :name %>
  <%= f.submit t('.save') %>
<% end %>

<% unless @categories.nil? %>
  <% @categories.each do |category| %>
    <p>
      <%= category.name %>
      <%= link_to t('.edit') , edit_category_path(category.id) %>
      <%= link_to t('.delete') , category_path(category.id), method: :delete %>
    </p>
  <% end %>
<% end %> 