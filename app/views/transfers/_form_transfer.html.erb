<%= form_for @transfer do |f| %>
  <%= f.fields_for :origin do |ff| %>
    <%= ff.label :name, t('.name') %>
    <%= ff.text_field :name %>
    <%= ff.label :value, t('.value') %>
    <%= ff.number_field :value %>
    <%= ff.label :date, t('.date') %>
    <%= ff.date_field :date %>
    <%= ff.label :category_id, t('.category') %>
    <%= ff.collection_select :category_id, @categories, :id, :name, selected: ff.object.category_id %>
    <%= ff.label :origin_id, t('.account_origin') %>
    <%= ff.collection_select :origin_id, @accounts, :id, :name, selected: ff.object.account_id %>
  <% end %>

  <%= f.fields_for :destiny do |form| %>
    <%= form.label :destiny_id, t('.account_destiny') %>
    <%= form.collection_select :destiny_id, @accounts, :id, :name, selected: form.object.account_id %>
<% end %>
  <%= f.submit t('.save') %>
<% end %>