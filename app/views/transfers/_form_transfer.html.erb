<%= form_with model: @transfer do |transfer_form| %>
  <%= fields_for :comum_params do |mov_form| %>
    <%= mov_form.label :name, t('.name') %>
    <%= mov_form.text_field :name %>
    <%= mov_form.label :value, t('.value') %>
    <%= mov_form.number_field :value %>
    <%= mov_form.label :date, t('.date') %>
    <%= mov_form.date_field :date %>
    <%= mov_form.label :category_id, t('.category') %>
    <%= mov_form.collection_select :category_id, @categories, :id, :name, { prompt: t('.select_category') } %>
  <% end %>
  <%= fields_for :account_origin do |origin_form| %>
    <%= origin_form.label :id, t('.account_origin') %>
    <%= origin_form.collection_select :id, @accounts, :id, :name, { prompt: t('.select_origin_account') } %>
  <% end %>
  <%= fields_for :account_destiny do |destiny_form| %>
    <%= destiny_form.label :id, t('.account_destiny') %>
    <%= destiny_form.collection_select :id, @accounts, :id, :name, { prompt: t('.select_destiny_account') } %>
  <% end %>
  <%= transfer_form.submit t('.save') %>
<% end %>