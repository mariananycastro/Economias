<%= form_for @movement do |f| %>
  <%= f.label :name, t('.name') %>
  <%= f.text_field :name %>
  <%= f.label :value, t('.total_value') %>
  <%= f.number_field :value %>
  <%= f.label :date, t('.initial_date') %>
  <%= f.date_field :date %>

<% t('.installment') %>
  <%= f.label :installments, t('.installments_qtd') %>
  <%= f.number_field :installments %>
<% t('.others') %>
  <%#= f.label :interval, t('.interval') %>
  <%#= f.select :interval, options_for_select(@movement.interval) %>
  <%= f.label :simple_movement_type, t('.type') %>
  <%= f.select :simple_movement_type, options_for_select(SimpleMovement.simple_movement_types) %>
  <%= f.label :category_id, t('.category') %>
  <%= f.collection_select :category_id, @categories, :id,:name, { prompt: t('.select_category') }%>
  <%= f.label :account_id, t('.account') %>
  <%= f.collection_select :account_id, @accounts, :id,:name, { prompt: t('.select_account') }%>
  <%= f.submit t('.save') %>
<% end %>